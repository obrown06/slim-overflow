<html>
  <head>
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/category.css") %>">
  </head>

  <body>
    <div class="category-summary">
      <div id="title">
        <%= "[" <> name(@category) <> "]" %>
      </div>

      <div id="description">
        <%= summary(@category) %>
      </div>

      <a id="show-category-link" href = "<%= category_path(@conn, :show, @category) %>">
        learn more...
      </a>
    </div>
  </body>

</html>
